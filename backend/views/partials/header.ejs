                style="display: none;" x-show="mobileMenuOpen">

                <div class="h-full overflow-y-auto pt-20 pb-6 px-6">
                    <div class="space-y-4">
                        <!-- Links principais -->
                        <div class="space-y-2">
                            <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Navegação</h3>
                            <div class="space-y-1">
                                <a href="/"
                                    class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                    <i class="fas fa-home mr-3 w-5 text-center text-gray-400"></i>
                                    Início
                                </a>
                                <a href="/projects"
                                    class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                    <i class="fas fa-rocket mr-3 w-5 text-center text-gray-400"></i>
                                    Projetos
                                </a>
                                <a href="/explore"
                                    class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                    <i class="fas fa-compass mr-3 w-5 text-center text-gray-400"></i>
                                    Explorar
                                </a>
                                <a href="/resources"
                                    class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                    <i class="fas fa-book mr-3 w-5 text-center text-gray-400"></i>
                                    Recursos
                                </a>
                            </div>
                        </div>

                        <% if (locals.user) { %>
                            <!-- Informações do usuário -->
                            <div class="p-4 border border-gray-100 rounded-lg bg-gray-50">
                                <div class="flex items-center space-x-3">
                                    <div
                                        class="h-12 w-12 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-medium text-lg">
                                        <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
                                    </div>
                                    <div>
                                        <p class="font-medium">
                                            <%= user.name %>
                                        </p>
                                        <p class="text-sm text-gray-500">
                                            <%= user.email %>
                                        </p>
                                    </div>
                                </div>

                                <div class="mt-4 space-y-2">
                                    <a href="/profile"
                                        class="block w-full px-4 py-2 text-center text-primary-600 bg-white border border-primary-200 rounded-lg hover:bg-primary-50 transition-colors">
                                        Ver Perfil
                                    </a>
                                    <a href="/logout"
                                        class="block w-full px-4 py-2 text-center text-red-600 bg-white border border-red-200 rounded-lg hover:bg-red-50 transition-colors">
                                        Sair
                                    </a>
                                </div>
                            </div>

                            <!-- Links rápidos baseados no tipo de usuário -->
                            <div class="space-y-2">
                                <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Acesso Rápido
                                </h3>

                                <div class="space-y-1">
                                    <% if (user.role==='developer' ) { %>
                                        <a href="/dashboard"
                                            class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                            <i class="fas fa-tachometer-alt mr-3 w-5 text-center text-gray-400"></i>
                                            Dashboard
                                        </a>
                                        <a href="/projects/new"
                                            class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                            <i class="fas fa-plus mr-3 w-5 text-center text-gray-400"></i>
                                            Novo Projeto
                                        </a>
                                        <% } else if (user.role==='investor' ) { %>
                                            <a href="/investment-dashboard"
                                                class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                                <i class="fas fa-chart-line mr-3 w-5 text-center text-gray-400"></i>
                                                Investimentos
                                            </a>
                                            <a href="/watchlist"
                                                class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                                <i class="fas fa-star mr-3 w-5 text-center text-gray-400"></i>
                                                Projetos Favoritos
                                            </a>
                                            <% } %>

                                                <a href="/settings"
                                                    class="block px-3 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors">
                                                    <i class="fas fa-cog mr-3 w-5 text-center text-gray-400"></i>
                                                    Configurações
                                                </a>
                                </div>
                            </div>
                            <% } else { %>
                                <!-- Botões de autenticação -->
                                <div class="space-y-3 pt-4">
                                    <a href="/login"
                                        class="block px-4 py-3 text-center text-primary-600 bg-white border border-primary-200 rounded-lg hover:bg-primary-50 transition-colors">
                                        Entrar na sua conta
                                    </a>

                                    <a href="/register"
                                        class="block px-4 py-3 text-center text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors pulse">
                                        Criar conta grátis
                                    </a>
                                </div>
                                <% } %>

                                    <!-- Alternador de tema mobile -->
                                    <div class="pt-4 flex items-center justify-between">
                                        <span class="text-sm text-gray-600">Alternar tema</span>
                                        <button @click="darkMode = !darkMode" class="theme-toggle bg-gray-300"
                                            :class="{'bg-primary-600 dark': darkMode}">
                                            <span class="sr-only">Alternar tema</span>
                                        </button>
                                    </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Espaçamento para evitar que o conteúdo fique embaixo do navbar fixo -->
        <div class="h-16 md:h-20"></div>

        <!-- Alertas e notificações -->
        <div class="container mx-auto px-4 mt-6">
            <div class="space-y-4">
                <% if (locals.error) { %>
                    <div x-data="{ show: true }" x-show="show" x-transition:enter="transition ease-out duration-300"
                        x-transition:enter-start="opacity-0 transform -translate-y-4"
                        x-transition:enter-end="opacity-100 transform translate-y-0"
                        x-transition:leave="transition ease-in duration-300"
                        x-transition:leave-start="opacity-100 transform translate-y-0"
                        x-transition:leave-end="opacity-0 transform -translate-y-4"
                        class="flex bg-white border-l-4 border-red-500 shadow-md rounded-lg p-4" role="alert">
                        <div class="flex-shrink-0 mr-4">
                            <i class="fas fa-exclamation-circle text-xl text-red-500"></i>
                        </div>
                        <div class="flex-1">
                            <h3 class="font-medium text-red-800 mb-1">Erro</h3>
                            <p class="text-sm text-red-700">
                                <%= error %>
                            </p>
                        </div>
                        <button @click="show = false" class="text-red-400 hover:text-red-600 focus:outline-none">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <% } %>

                        <% if (locals.success) { %>
                            <div x-data="{ show: true }" x-show="show"
                                x-transition:enter="transition ease-out duration-300"
                                x-transition:enter-start="opacity-0 transform -translate-y-4"
                                x-transition:enter-end="opacity-100 transform translate-y-0"
                                x-transition:leave="transition ease-in duration-300"
                                x-transition:leave-start="opacity-100 transform translate-y-0"
                                x-transition:leave-end="opacity-0 transform -translate-y-4"
                                class="flex bg-white border-l-4 border-green-500 shadow-md rounded-lg p-4" role="alert">
                                <div class="flex-shrink-0 mr-4">
                                    <i class="fas fa-check-circle text-xl text-green-500"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-green-800 mb-1">Sucesso!</h3>
                                    <p class="text-sm text-green-700">
                                        <%= success %>
                                    </p>
                                </div>
                                <button @click="show = false"
                                    class="text-green-400 hover:text-green-600 focus:outline-none">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <% } %>

                                <% if (locals.registered) { %>
                                    <div x-data="{ show: true }" x-show="show"
                                        x-transition:enter="transition ease-out duration-300"
                                        x-transition:enter-start="opacity-0 transform -translate-y-4"
                                        x-transition:enter-end="opacity-100 transform translate-y-0"
                                        x-transition:leave="transition ease-in duration-300"
                                        x-transition:leave-start="opacity-100 transform translate-y-0"
                                        x-transition:leave-end="opacity-0 transform -translate-y-4"
                                        class="flex bg-white border-l-4 border-primary-500 shadow-md rounded-lg p-4"
                                        role="alert">
                                        <div class="flex-shrink-0 mr-4">
                                            <i class="fas fa-user-check text-xl text-primary-500"></i>
                                        </div>
                                        <div class="flex-1">
                                            <h3 class="font-medium text-primary-800 mb-1">Conta criada!</h3>
                                            <p class="text-sm text-primary-700">Registro concluído com sucesso! Agora
                                                você pode fazer login.</p>
                                        </div>
                                        <button @click="show = false"
                                            class="text-primary-400 hover:text-primary-600 focus:outline-none">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <% } %>
            </div>
        </div>

        <!-- Aqui entra o conteúdo da página -->
    </div>

    <script>
        // Scripts adicionais podem ser inseridos aqui
        document.addEventListener('alpine:init', () => {
            // Verificar preferência de tema do sistema
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

            // Inicializar o tema com base na preferência do sistema
            document.querySelector('html').classList.toggle('dark', prefersDark);
        });
    </script>
</body>

</html>