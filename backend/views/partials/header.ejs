                                    x-transition:enter="transition ease-out duration-200"
                                    x-transition:enter-start="opacity-0 transform scale-95"
                                    x-transition:enter-end="opacity-100 transform scale-100"
                                    x-transition:leave="transition ease-in duration-150"
                                    x-transition:leave-start="opacity-100 transform scale-100"
                                    x-transition:leave-end="opacity-0 transform scale-95"
                                    class="absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-xl z-50 dropdown-menu"
                                    style="display: none;">

                                    <div class="p-4 border-b border-gray-100 bg-gray-50">
                                        <div class="flex items-center space-x-3">
                                            <div
                                                class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-medium">
                                                <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
                                            </div>
                                            <div>
                                                <p class="text-sm font-medium text-gray-800">
                                                    <%= user.name %>
                                                </p>
                                                <p class="text-xs text-gray-500">
                                                    <%= user.email %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="py-2">
                                        <a href="/profile"
                                            class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50">
                                            <i class="fas fa-user-circle w-5 text-gray-400 mr-3"></i>
                                            Meu Perfil
                                        </a>

                                        <% if (user.role==='developer' ) { %>
                                            <a href="/dashboard"
                                                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50">
                                                <i class="fas fa-tachometer-alt w-5 text-gray-400 mr-3"></i>
                                                Dashboard
                                            </a>

                                            <a href="/projects/new"
                                                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50">
                                                <i class="fas fa-plus w-5 text-gray-400 mr-3"></i>
                                                Novo Projeto
                                            </a>
                                            <% } else if (user.role==='investor' ) { %>
                                                <a href="/investment-dashboard"
                                                    class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50">
                                                    <i class="fas fa-chart-line w-5 text-gray-400 mr-3"></i>
                                                    Investimentos
                                                </a>
                                                <% } %>

                                                    <a href="/settings"
                                                        class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50">
                                                        <i class="fas fa-cog w-5 text-gray-400 mr-3"></i>
                                                        Configurações
                                                    </a>

                                                    <div class="border-t border-gray-100 my-1"></div>

                                                    <a href="/logout"
                                                        class="flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50">
                                                        <i class="fas fa-sign-out-alt w-5 text-red-400 mr-3"></i>
                                                        Sair
                                                    </a>
                                    </div>
                                </div>
                            </div>
                            <% } else { %>
                                <div class="flex items-center space-x-3">
                                    <a href="/login"
                                        class="px-4 py-2 text-primary-600 hover:text-primary-700 transition-colors">
                                        Entrar
                                    </a>
                                    <a href="/register"
                                        class="px-5 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-full transition-colors pulse">
                                        Começar agora
                                    </a>
                                </div>
                                <% } %>
                    </div>

                    <!-- Botão do menu mobile -->
                    <button @click="mobileMenuOpen = !mobileMenuOpen"
                        class="md:hidden w-10 h-10 flex items-center justify-center rounded-full z-50 bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors">
                        <i class="fas" :class="mobileMenuOpen ? 'fa-times' : 'fa-bars'"></i>
                    </button>
                </nav>
            </div>

            <!-- Menu móvel -->
