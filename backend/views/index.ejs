<%- include('partials/header') %>

    <section class="max-w-7xl mx-auto flex flex-col md:flex-row items-center px-6 py-12 gap-12">

        <!-- Texto principal à esquerda -->
        <div class="flex-1 text-center md:text-left space-y-6">
            <h1 class="text-5xl font-extrabold text-gray-900 leading-tight">
                Bem-vindo ao <span class="text-indigo-600">IncubePro</span>
            </h1>
            <p class="text-lg text-gray-700 max-w-lg mx-auto md:mx-0">
                A plataforma que conecta desenvolvedores talentosos com investidores visionários para transformar ideias
                em projetos de sucesso.
            </p>

            <div class="flex justify-center md:justify-start gap-6">
                <a href="/register?role=developer"
                    class="px-8 py-3 bg-indigo-600 text-white rounded-md shadow hover:bg-indigo-700 transition">
                    Sou Desenvolvedor
                </a>
                <a href="/register?role=investor"
                    class="px-8 py-3 bg-green-600 text-white rounded-md shadow hover:bg-green-700 transition">
                    Sou Investidor
                </a>
            </div>
        </div>

        <!-- Carrossel à direita -->
        <div class="flex-1 max-w-xl w-full rounded-lg overflow-hidden shadow-lg relative">
            <div id="carousel" class="overflow-hidden relative">
                <div class="flex transition-transform duration-700 ease-in-out" style="transform: translateX(0%);"
                    data-carousel-inner>
                    <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80"
                        alt="Imagem 1" class="w-full flex-shrink-0 object-cover h-80 sm:h-96" />
                    <img src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=800&q=80"
                        alt="Imagem 2" class="w-full flex-shrink-0 object-cover h-80 sm:h-96" />
                    <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=800&q=80"
                        alt="Imagem 3" class="w-full flex-shrink-0 object-cover h-80 sm:h-96" />
                </div>

                <!-- Indicadores -->
                <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-3">
                    <button data-slide-to="0"
                        class="w-3 h-3 rounded-full bg-white opacity-70 hover:opacity-100"></button>
                    <button data-slide-to="1"
                        class="w-3 h-3 rounded-full bg-white opacity-40 hover:opacity-100"></button>
                    <button data-slide-to="2"
                        class="w-3 h-3 rounded-full bg-white opacity-40 hover:opacity-100"></button>
                </div>
            </div>
        </div>

    </section>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const carousel = document.querySelector('[data-carousel-inner]');
            const slides = carousel.children;
            const indicators = document.querySelectorAll('[data-slide-to]');
            let currentIndex = 0;
            let intervalId = null;
            const slideCount = slides.length;

            function updateCarousel() {
                carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
                indicators.forEach((btn, i) => {
                    btn.classList.toggle('opacity-70', i === currentIndex);
                    btn.classList.toggle('opacity-40', i !== currentIndex);
                });
            }

            function nextSlide() {
                currentIndex = (currentIndex + 1) % slideCount;
                updateCarousel();
            }

            // Auto slide a cada 4 segundos
            function startAutoSlide() {
                intervalId = setInterval(nextSlide, 3000);
            }

            function stopAutoSlide() {
                clearInterval(intervalId);
            }

            indicators.forEach((btn, i) => {
                btn.addEventListener('click', () => {
                    currentIndex = i;
                    updateCarousel();
                    stopAutoSlide();
                    startAutoSlide();
                });
            });

            // Pausar auto slide ao passar o mouse no carrossel
            const carouselContainer = document.getElementById('carousel');
            carouselContainer.addEventListener('mouseenter', stopAutoSlide);
            carouselContainer.addEventListener('mouseleave', startAutoSlide);

            updateCarousel();
            startAutoSlide();
        });
    </script>