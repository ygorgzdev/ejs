<%- include('partials/header') %>

    <div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
        <div class="bg-gray-800 rounded-lg shadow-lg max-w-md w-full p-8 animate__animated animate__fadeInUp">
            <h2 class="text-3xl font-semibold text-center text-gray-200 mb-6">
                Entrar no IncubePro
            </h2>
            <form action="/login" method="POST" class="space-y-6">
                <div>
                    <label for="email" class="block text-gray-300 font-medium mb-2">Email</label>
                    <input type="email" id="email" name="email" required placeholder="seuemail@exemplo.com"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" />
                </div>
                <div>
                    <label for="password" class="block text-gray-300 font-medium mb-2">Senha</label>
                    <input type="password" id="password" name="password" required placeholder="••••••••"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" />
                </div>
                <button type="submit"
                    class="w-full bg-indigo-700 hover:bg-indigo-800 text-gray-100 font-semibold py-3 rounded-md shadow-md transition">
                    Entrar
                </button>
            </form>

            <p class="mt-6 text-center text-gray-400">
                Não tem uma conta?
                <a href="/register" class="text-indigo-400 font-semibold hover:underline">Cadastre-se</a>
            </p>
        </div>
    </div>

    <%- include('partials/footer') %>