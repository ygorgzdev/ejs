<%- include('partials/head', { title: 'Projetos em Andamento' }) %>

    <div x-data="projetosData()" class="min-h-screen flex flex-col">
        <%- include('partials/navbar', { user: typeof user !=='undefined' ? user : null }) %>

            <main class="flex-grow">
                <!-- Hero Section -->
                <section class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-16">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                        <h1 class="text-4xl md:text-5xl font-bold mb-6">
                            Projetos em <span class="text-blue-300">Andamento</span>
                        </h1>
                        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
                            Descubra projetos inovadores que est√£o buscando investimento para se tornarem realidade
                        </p>
                        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                            <div class="bg-white/20 px-6 py-3 rounded-lg backdrop-blur-sm">
                                <span class="text-2xl font-bold">45+</span>
                                <p class="text-sm">Projetos ativos</p>
                            </div>
                            <div class="bg-white/20 px-6 py-3 rounded-lg backdrop-blur-sm">
                                <span class="text-2xl font-bold">R$ 2.5M</span>
                                <p class="text-sm">Buscando investimento</p>
                            </div>
                            <div class="bg-white/20 px-6 py-3 rounded-lg backdrop-blur-sm">
                                <span class="text-2xl font-bold">72h</span>
                                <p class="text-sm">Tempo m√©dio de resposta</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Filtros e Busca -->
                <section class="py-8 bg-gray-50">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                        <!-- Barra de busca -->
                        <div class="mb-6">
                            <div class="relative max-w-md mx-auto">
                                <input type="text" x-model="busca" placeholder="Buscar projetos..."
                                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <span class="material-icons-outlined absolute left-3 top-3 text-gray-400">search</span>
                            </div>
                        </div>

                        <!-- Filtros por categoria -->
                        <div class="flex flex-wrap gap-4 justify-center mb-4">
                            <button @click="filtroCategoria = 'todos'"
                                :class="filtroCategoria === 'todos' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-6 py-2 rounded-full border transition-colors font-medium">
                                Todos
                            </button>
                            <button @click="filtroCategoria = 'web'"
                                :class="filtroCategoria === 'web' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-6 py-2 rounded-full border transition-colors font-medium">
                                Web
                            </button>
                            <button @click="filtroCategoria = 'mobile'"
                                :class="filtroCategoria === 'mobile' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-6 py-2 rounded-full border transition-colors font-medium">
                                Mobile
                            </button>
                            <button @click="filtroCategoria = 'ai'"
                                :class="filtroCategoria === 'ai' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-6 py-2 rounded-full border transition-colors font-medium">
                                IA & ML
                            </button>
                            <button @click="filtroCategoria = 'blockchain'"
                                :class="filtroCategoria === 'blockchain' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-6 py-2 rounded-full border transition-colors font-medium">
                                Blockchain
                            </button>
                        </div>

                        <!-- Filtros por valor -->
                        <div class="flex flex-wrap gap-4 justify-center">
                            <button @click="filtroValor = 'todos'"
                                :class="filtroValor === 'todos' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-4 py-2 rounded-full border transition-colors text-sm">
                                Todos os valores
                            </button>
                            <button @click="filtroValor = 'ate50k'"
                                :class="filtroValor === 'ate50k' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-4 py-2 rounded-full border transition-colors text-sm">
                                At√© R$ 50K
                            </button>
                            <button @click="filtroValor = '50k-200k'"
                                :class="filtroValor === '50k-200k' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-4 py-2 rounded-full border transition-colors text-sm">
                                R$ 50K - 200K
                            </button>
                            <button @click="filtroValor = 'acima200k'"
                                :class="filtroValor === 'acima200k' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'"
                                class="px-4 py-2 rounded-full border transition-colors text-sm">
                                Acima de R$ 200K
                            </button>
                        </div>
                    </div>
                </section>

                <!-- Grid de Projetos -->
                <section class="py-16">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                            <template x-for="projeto in projetosFiltrados" :key="projeto.id">
                                <div
                                    class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                                    <!-- Status Badge -->
                                    <div class="relative">
                                        <div
                                            class="h-48 bg-gradient-to-br from-indigo-400 via-blue-500 to-purple-600 relative overflow-hidden">
                                            <div class="absolute inset-0 bg-black/10"></div>
                                            <div class="absolute top-4 left-4">
                                                <span
                                                    class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-medium">
                                                    üöÄ Buscando Investimento
                                                </span>
                                            </div>
                                            <div class="absolute top-4 right-4">
                                                <span
                                                    class="bg-white/20 backdrop-blur-sm text-white px-2 py-1 rounded-full text-xs"
                                                    x-text="projeto.progresso + '% conclu√≠do'"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Conte√∫do -->
                                    <div class="p-6">
                                        <h3 class="text-xl font-bold text-gray-900 mb-2" x-text="projeto.nome"></h3>
                                        <p class="text-gray-600 mb-4 line-clamp-3" x-text="projeto.descricao"></p>

                                        <!-- Progresso -->
                                        <div class="mb-4">
                                            <div class="flex justify-between text-sm text-gray-600 mb-1">
                                                <span>Progresso do desenvolvimento</span>
                                                <span x-text="projeto.progresso + '%'"></span>
                                            </div>
                                            <div class="w-full bg-gray-200 rounded-full h-2">
                                                <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                                                    :style="`width: ${projeto.progresso}%`"></div>
                                            </div>
                                        </div>

                                        <!-- Investimento necess√°rio -->
                                        <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-lg p-4 mb-4">
                                            <div class="text-center">
                                                <div class="text-2xl font-bold text-green-600"
                                                    x-text="projeto.investimentoNecessario"></div>
                                                <div class="text-sm text-gray-600">Investimento necess√°rio</div>
                                                <div class="text-xs text-gray-500 mt-1"
                                                    x-text="'Prazo: ' + projeto.prazo"></div>
                                            </div>
                                        </div>

                                        <!-- Tags de tecnologia -->
                                        <div class="flex flex-wrap gap-2 mb-4">
                                            <template x-for="tech in projeto.tecnologias.slice(0, 3)" :key="tech">
                                                <span
                                                    class="px-2 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full"
                                                    x-text="tech"></span>
                                            </template>
                                            <span x-show="projeto.tecnologias.length > 3"
                                                class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full"
                                                x-text="'+' + (projeto.tecnologias.length - 3)"></span>
                                        </div>

                                        <!-- Developer info e a√ß√µes -->
                                        <div class="flex items-center justify-between border-t pt-4">
                                            <div class="flex items-center space-x-2">
                                                <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white text-sm font-bold"
                                                    x-text="projeto.developer.iniciais"></div>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-900"
                                                        x-text="projeto.developer.nome"></p>
                                                    <p class="text-xs text-gray-500"
                                                        x-text="projeto.developer.experiencia"></p>
                                                </div>
                                            </div>
                                            <div class="flex space-x-2">
                                                <button class="text-blue-600 hover:text-blue-800 p-1"
                                                    title="Ver detalhes">
                                                    <span class="material-icons-outlined text-lg">visibility</span>
                                                </button>
                                                <button class="text-green-600 hover:text-green-800 p-1"
                                                    title="Demonstrar interesse">
                                                    <span class="material-icons-outlined text-lg">favorite_border</span>
                                                </button>
                                            </div>
                                        </div>

